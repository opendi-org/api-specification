                "content": {
                    "title": "Line Contents",
                    "description": "Holds properties specific to a Text Element",
                    "type": "object",
                    "properties": {
                        "vertices": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "x": {"type": "number", "default": 0},
                                    "y": {"type": "number", "default": 0}
                                }
                            }
                        }
                    },
                    "required": ["vertices"],
                    "additionalProperties": false
                }
            },
            "required": ["meta", "displayType", "content"],
            "additionalProperties": false
        },
