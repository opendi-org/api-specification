                            "required": ["width", "height"],
                            "additionalProperties": false
                        },
                        "text": { "type": "string", "default": "" },
                        "font": {
                            "MIMEType": {"type": "string", "default": "font/otf"},
                            "base64String": {"type": "string"}
                        }
                    },
                    "required": ["text"],
                    "additionalProperties": false
                }
            },
            "required": ["meta", "displayType", "content"],
            "additionalProperties": false
        },
        {
            "title": "Custom Element",
